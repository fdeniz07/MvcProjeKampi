@model EntityLayer.Dto.AdminLogInDto
@{
    Layout = "~/Views/Shared/_TalentLayout.cshtml";
}

<!doctype html>
<html lang="en">
<head>
    <title>MVC Kamp AdminLogin</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    @*<link rel="stylesheet" href="~/Themes/login-form-19/css/style.css">*@
</head>
<body>
    <br />
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">MVC Proje Kampı Admin Girişi</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap py-5">
                        <div class="img d-flex align-items-center justify-content-center" style="background-image: url(/Themes/login-form-19/images/bg.jpg);"></div>
                        <h3 class="text-center mb-0">Hoşgeldiniz</h3>
                        <p class="text-center" style="color: brown">Lütfen bilgilerinizi kutucuklara giriniz</p>
                        <p class="text-center" style="color: red">@ViewData["ErrorMessage"]</p>
                        @using (Html.BeginForm("AdminLogIn", "LogIn", FormMethod.Post))
                        {
                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-user"></span></div>
                                <input type="text" class="form-control" name="AdminMail" placeholder="Admin Mail Adresi" required>
                            </div>
                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-lock"></span></div>
                                <input type="password" class="form-control" name="AdminPassword" placeholder="******" required>
                            </div>

                            //Google Captcha v2
                            //Canli Site icin mail ile site adi kayit yaptirilir
                            @*<div class="form-group" style="text-align: right">
                                    <div class="g-recaptcha" data-sitekey="6LdF9ZAbAAAAAMNCaTdJlqY2dZEvUucKplB35HoS" ></div>
                                </div>*@

                            //Localhost icin Captcha
                            @*<div class="form-group" style="text-align: right">
                                    <div class="g-recaptcha" data-sitekey="6Lc9zzgbAAAAAJDfN-bu5MAhg48ONV-nSDAqxYjj"></div>
                                </div>*@


                            //Google Captcha v3
                            //Canli Site icin mail ile site adi kayit yaptirilir
                            <div class="form-group" style="text-align: center">
                                <div>
                                    <button class="g-recaptcha"
                                            data-sitekey="6LdF9ZAbAAAAAMNCaTdJlqY2dZEvUucKplB35HoS"
                                            data-callback='onsubmit'
                                            data-action='submit'>
                                        Captcha Kodu Gönder
                                    </button>
                                </div>
                            </div>


                            //Localhost icin Captcha
                            @*<div class="form-group" style="text-align: center">
                                    <div>
                                        <button class="g-recaptcha"
                                                data-sitekey="6LewJJEbAAAAAAyInk8nPL5HQncQOcm2u04562FX"
                                                data-callback='onsubmit'
                                                data-action='submit'>
                                            gönder
                                        </button>
                                    </div>
                                </div>*@

                            <div class="form-group d-md-flex">
                                <div class="w-100 text-md-left"><a href="#" style="color: white">Şifremi Unuttum</a></div>
                                <div class="w-100 text-md-right"><a href="/Register/AdminRegister/" style="color: white">Kayıt Ol</a></div>
                            </div>
                            <br />
                            if (ViewBag.ErrorMessage != null)
                            {
                                <div class="text-center" style="margin-bottom: 15px">
                                    <a class="text-gray-dark">
                                        @ViewBag.ErrorMessage
                                    </a>
                                </div>
                            }
                            <div class="form-group">
                                <button type="submit" class="btn form-control btn-primary rounded submit px-3">Giriş Yap</button>
                            </div>
                        }
                        <div class="w-100 text-center mt-4 text">
                            <a href="/Home/HomePage/" style="color: white">Ana Sayfaya Dön</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="~/Themes/captcha/vendor/jquery/jquery-3.2.1.min.js"></script>
    <script src="~/Themes/captcha/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Themes/captcha/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Themes/captcha/vendor/select2/select2.min.js"></script>
    <script src="~/Themes/captcha/vendor/tilt/tilt.jquery.min.js"></script>
    @*<script>
            $('.js-tilt').tilt({
                scale: 1.1
            })
        </script>*@
    <script>
        function onSubmit(token) {
            document.getElementById("demo-form").submit();
        }
    </script>
    <script src="~/Themes/captcha/js/main.js"></script>
    <script src='https://www.google.com/recaptcha/api.js' type="text/javascript"></script>

    <!--                                                                 -->

    <script src="~/Themes/login-form-19/js/jquery.min.js"></script>
    <script src="~/Themes/login-form-19/js/popper.js"></script>
    <script src="~/Themes/login-form-19/js/bootstrap.min.js"></script>
    <script src="~/Themes/login-form-19/js/main.js"></script>
</body>
</html>


